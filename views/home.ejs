<%- include('partials/header') %> 

<h1>Home</h1>
<p><%= content %> </p>

<% posts.forEach(function(post) {%>
    <h1><%= post.postTitle %> </h1>
    <% var truncatedBody=post.postBody.substring(0,100) %> 
    <% if(post.postBody.length>100){ %> 
   
    <p style="white-space: nowrap;overflow: hidden; text-overflow: ellipsis;"><%= truncatedBody +" ... "%><a href="/posts/<%= post._id %> ">Read More</a></p>
    <% }else{ %> 
    <p style="white-space: nowrap;overflow: hidden; text-overflow: ellipsis;"><%= truncatedBody+" "%> <a href="/posts/<%= post._id %> ">Read More</a></p>
    <% } %> 
<%  });  %>

<%- include('partials/footer') %> 